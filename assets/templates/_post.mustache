<article id="post-{{id}}">
	{{#title}}<h2>{{.}}</h2>{{/title}}
	<div class="meta">
		<div class="authors">
			{{#authors.length}}
			<a href="{{url}}" title="{{authors.0.name}}">{{#authors.0.avatar}}<img src="{{.}}">{{/authors.0.avatar}}{{^authors.0.avatar}}<img src="{{zoup}}/images/default.png">{{/authors.0.avatar}}</a>
			{{/authors.length}}
		</div>
	</div>
	<div class="content-wrapper">
	{{{content_html}}}
	{{#tags.length}}
	<div class="tags">
		{{#tags}}<a href="{{base}}/tag/{{.}}">{{.}}</a>{{/tags}}
	</div>
	{{/tags.length}}
	</div>
	<div class="action">
		{{#auth}}
		<button class="remove" data-id="{{id}}"><i class="icon-delete" title="remove"></i> <span>remove</span></button>
		{{/auth}}
		<button class="repost" data-url="{{url}}"><i class="icon-repost" title="repost"></i> <span>repost</span></button>
		<button class="react" data-url="{{url}}"><i class="icon-comment" title="react"></i> <span>react</span></button>
	</div>
</article>
